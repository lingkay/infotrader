            </div>
        {# </div> #}
        <div class="form--input-wrap with-label label-bottom">
            <button type="submit" class="btn btn-primary">Login <i class="m-icon-swapright m-icon-white"></i></button>
            <a href="#" class="small">Forgot password</a>
        </div>
    </form>
    <!-- END LOGIN FORM -->
    <div class="clearfix"></div>
</div>
<!-- END LOGIN -->
