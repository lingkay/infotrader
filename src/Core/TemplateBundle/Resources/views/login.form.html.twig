{% block fos_user_content %}
<!-- BEGIN LOGIN -->
<div class="form form--input-wrap with-label content">
    <!-- BEGIN LOGIN FORM -->
    <form class="navbar-form navbar-right login-form form--login" action="/login_check" method="post">
        {# <div class="form-group"> #}
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <div class="form--input-wrap with-label">
