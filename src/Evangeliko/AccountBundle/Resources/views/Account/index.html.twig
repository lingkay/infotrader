{% block js %}
<script type="text/javascript">
$(document).ready(function(e){

	$('#cform-post_type').change(function(){
        var post_type = $(this).val();

        if(post_type == 'paid'){
            $("#paid_post").show();
        }else{
            $('#cform-amount').val(0);
            $("#paid_post").hide();
        }
    });

    $('#posts').on('click', '.read-more-a', function() {
        var read_more_div = $(this).parent("div");
        var short_msg_div = read_more_div.parent("div");
        var parent_div = short_msg_div.parent("div");
        var full_msg_div = parent_div.find(".full-text")
        short_msg_div.hide();
        full_msg_div.show();
    });

    $('#posts').on('click', '.collapse-a', function() {
        var read_more_div = $(this).parent("div");
        var full_msg_div = read_more_div.parent("div");
        var parent_div = full_msg_div.parent("div");
        var short_msg_div = parent_div.find(".short-message")
        short_msg_div.show();
        full_msg_div.hide();
    });
});
</script>
