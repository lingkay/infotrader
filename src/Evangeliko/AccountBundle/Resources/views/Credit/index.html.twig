{% extends 'CoreTemplateBundle::base.html.twig' %}
{% import 'CoreTemplateBundle::macro.html.twig' as form %}

{% block content %}
<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12">
		<div class="container-fluid">
			<form class="form-horizontal" method="post">
				<div class="jumbotron">
					<div class="container">
						<div class="col-md-12" style="background-color: white !important;">
							<div class="form-body">
								<h4 class="form-section">Credits</h4>
								{{ form.hidden('redirect', redirect_id) }}
								{{ form.hidden('amt_deduct', deduct) }}
								{{ form.hidden('account_credit_id', object.getCredit.getID) }}
								{{ form.group_textnew('Current Balance', 'current_balance', object.getCredit.getAmount, 3, 4, {readonly: true}) }}
								{{ form.group_selectnew('Reload Amount', 'reload_amount', amt_opts, '', 3, 4) }}
								<div class="col-md-7">
									<div class="form-actions fluid pull-right">
										<button type="submit" class="btn btn-primary">Submit</button>
									</div>
								</div>
								<br><br>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{% endblock %}