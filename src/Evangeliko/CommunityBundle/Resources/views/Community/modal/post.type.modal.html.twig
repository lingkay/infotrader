<div id="sufficient-credit-form" class="modal fade" tabindex="-1" aria-hidden="true">
    <form id="add-post-form" action="{{ path('evangeliko_view_post') }}">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Paid Post</h4>
                </div>
                <div class="modal-body">
                    <div class="row form-horizontal form">
                        <div class="form-body">
                            <p>This is a paid post and you have sufficient credits would you like to proceed?</p>
                            {{ form.hidden('post_id', "") }}
                            {{ form.hidden('amount_modal', '')}}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn default">Close</button>
                    <button id="btn_product_submit" class="btn default">View Post</button>
                </div>
            </div>
        </div>
    </form>
</div>