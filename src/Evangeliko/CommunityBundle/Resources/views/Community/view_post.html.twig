{% extends 'CoreTemplateBundle::base.html.twig' %}
{% import 'CoreTemplateBundle::macro.html.twig' as form %}

{% block content %}
<div class="col-md-12">
	<div class="row">
        <div class="container-fluid">
            <div class="jumbotron">
                <div class="form-body form-horizontal">
                    <div class="form-group">
                        <a href="#">{{ post.getUserCreate.getAccount.getFullName }}</a>
                    </div>
                    <div class="form-group">
                        {{ post.getTimePassed }}
                    </div>
                    <div id="posts" class="container">
                        <div class="col-md-12" style="background-color: white !important;">
                            <div class="short-message">
                                <br>
                                <div class="form-group">
                                    <div class="col-md-offset-1 col-md-10 col-md-offset-1">
                                        <textarea id="cform-post" name="post" class="form-control" rows="5" readonly>{{ post.getMessage}}</textarea>
                                        <a class="reply-form pull-right">Reply</a>
                                    </div>
                                </div>
                                <div class="replay-text" style="display: none;">
                                    <div class="container-fluid">
                                        <div class="jumbotron">
                                            <form method="post" action="{{ path('evangeliko_post_submit') }}">
                                                {{ form.hidden('account_type', 'community') }}
                                                {{ form.hidden('community_id', object.getID ) }}
                                                {{ form.hidden('parent', post.getID) }}
                                                <textarea id="cform-reply" name="reply" class="form-control" rows="3" placeholder="What's on your mind?"></textarea>
                                                <button id="post-btn" type="submit" class="btn btn-primary pull-right">Post</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% if post.getReply is not null %}
                                {% for reply in post.getReply %}
                                <div class="form-group">
                                    <a href="#">{{ reply.getUserCreate.getAccount.getFullName }}</a>
                                    <br>
                                    {{ reply.getTimePassed }}
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-1 col-md-10 col-md-offset-1">
                                        <textarea id="cform-post" name="post" class="form-control" rows="2" readonly>{{ reply.getTitle }}</textarea>
                                    </div>
                                </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
	</div>
</div>
{% endblock %}
{% block js %}
<script type="text/javascript">
$(document).ready(function(e){
    $('#posts').on('click', '.reply-form', function() {

        var read_more_div = $(this).parent("div");
        var full_msg_div = read_more_div.parent("div");
        var parent_div = full_msg_div.parent("div");
        var msg_div = parent_div.parent('div');
        var short_msg_div = parent_div.find(".replay-text")
        short_msg_div.show();
    });
});
</script>
{% endblock %}