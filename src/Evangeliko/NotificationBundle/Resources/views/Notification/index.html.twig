{% extends 'CoreTemplateBundle::base_community.html.twig' %}
{% import 'CoreTemplateBundle::macro.html.twig' as form %}

{% block content %}
	<div class="page--wrap--contents">
		<div class="container">
			<div class="notifications-list">
				<div class="notifications-list--text-wrap">
					<h4>All Notifications</h4>
				</div>
				<div class="notifications-list--text-wrap">
					<ul class="notifications">
                        {% for notif in notifs %}
							<li>
								{% set notif_path = "" %}
								{% if notif.getCommunity is not null %}
									{% set notif_path = path('evangeliko_community_view', {'slug': notif.getCommunity.getSlug, 'filterType' : 'all'}) %}
                                {% elseif notif.getPost is not null %}
                                    {% set notif_path = path('evangeliko_view_free_post', {'id':notif.getPost.getID}) %}
                                {% else %}
                                	{% set notif_path = "" %}
                                {% endif %}
								<a href="{{ notif_path }}">
									<div class="notifications--single">
										<img src="http://via.placeholder.com/31x30" alt="">
										<p>{{ notif.getMessage }}</p>

									</div>
								</a>
							</li>
                        {% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
{% endblock %}