{% extends 'CoreTemplateBundle::base.html.twig' %}
{% import 'CoreTemplateBundle::macro.html.twig' as form %}

{% block content %}
<div class="article-page--header">
	<div class="container">
		<div class="row">
			<div class="account">
				<div class="col-xs-8">
					<h2>Purchase credits</h2>
					<p>When topping up your balance, please note: per our fraud control guidelines, some transactions (especially those third-party payments) may require additional verification. In some cases, we’ll need phone verification for the card holder.</p>
				</div>
				<div class="col-xs-4 account--balance">
					<small>Current balance</small>
					<large>{{ account.getCredit.getAmount }}</large>
					<a href="{{ path('evangeliko_credit_index') }}">Top-up now!</a>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12">
		<div class="page--wrap--contents">
			<div class="container">
				<div class="page-section">
					<div class="row">
						<div class="col-md-4 hidden-xs">
							<div class="banner-bg banner-bg--color">
								<h2 class="mb30">Purchase credits to enjoy more of the Hive.</h2>
								<p>Join us for our next chapter as Hive becomes the most rewarding platform for the world’s writers, thinkers, and storytellers.</p>
							</div>
						</div>
						<div class="col-md-8">
							<form action="{{ path('evangeliko_credit_index') }}">
								{{ form.hidden('redirect_id', post.getID) }}
	                            {{ form.hidden('amt_deduct', post.getAmount)}}
								<div class="purchase-details">
									<div class="article-purchase">
										<img src="http://via.placeholder.com/76x76" alt="">
											<div class="article-purchase--details">
												<h3>{{ post.getTitle }}</h3>
												<small>{{ post.getTimePassed }}</small>
											</div>
									</div>
									<div class="purchase-details--payment">
										<small>You have to pay</small>
										<large>${{post.getAmount}}</large>
										<button type="submit" class="btn btn-info">Pay</a>  
										{# <a href="" class="btn btn-info">Pay</a> #}
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}